<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('../partials/head'); %>
  </head>
  <body class="container" id="users-index">
    <header><%- include('../partials/header'); %></header>

    <main>
      <section class="text-center">
        <noscript>
          <a class="weatherwidget-io" target="_blank" href="https://forecast7.com/en/52d374d90/amsterdam/" data-label_1="AMSTERDAM" data-label_2="WEATHER" data-theme="original" >Bekijk het weer in Amsterdam</a>
        </noscript>
        <p id="temperature"></p>
        <p id="location"></p>
      </section>

      <section class="row d-flex justify-content-center">
        <% if (profiles.length > 0) { %> <% profiles.forEach(profile => { %>

        <article class="col-3 m-3 box card text-center shadow p-3">
          <div
            class="card-header"
            style="background-color: <%= profile.personalColor %>"
          >
            <img
              src="../dist/img/<% if (profile.petCategory == 'cat'){ %>cat<% } else { %>dog<% } %>-icon.png"
              alt="huisdier icon"
            />
          </div>
          <div class="card-body">
            <h5 class="card-title">
              <%= profile.firstName %> <%= profile.lastName %>
            </h5>
            <p class="card-text"><%= profile.bio %></p>
            <a href="/users/<%= profile._id %> " class="btn btn-primary"
              >Bekijk profiel</a
            >
          </div>
          <div class="card-footer text-muted">2 days ago</div>
        </article>
        <% }); %> <% } else { %>

        <div class="col-12">No Users to be shown</div>

        <% } %>
      </section>
    </main>

    <footer><%- include('../partials/footer'); %></footer>
    <script src="/dist/js/weatherapi.js"></script>
  </body>
</html>
